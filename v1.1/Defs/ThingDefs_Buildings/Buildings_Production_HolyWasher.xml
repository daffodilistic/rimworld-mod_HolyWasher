<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>HolyWasher</defName>
    <label>Washing Machine</label>
    <description>The good old washing machine "Halinka 2000" untaints Apparel that has been worn by a corpse.</description>
    <thingClass>Building_WorkTable</thingClass>
    <costList>
      <Steel>150</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <graphicData>
      <texPath>Things/HolyWasher/Building/Washer/washer</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1.3,1.3)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <researchPrerequisites>
      <li>AdvancedWashing</li>
      <li>Electricity</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <statBases>
      <WorkToBuild>300</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>0</Cleanliness>
    </statBases>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>True</useHitPoints>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <rotatable>true</rotatable>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>300</basePowerConsumption>
        <shortCircuitInRain>true</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_Breakdownable" />
    </comps>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>HolyBasin</defName>
    <label>Metal Basin</label>
    <description>Old metal basin where you wash your clothes to untaint Apparel that has been worn by a corpse.</description>
    <thingClass>Building_WorkTable</thingClass>
    <costList>
      <WoodLog>10</WoodLog>
    </costList>
    <costStuffCount>75</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <graphicData>
      <texPath>Things/HolyWasher/Building/Basin/basin</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1.3,1.3)</drawSize>
      <drawRotated>false</drawRotated>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <researchPrerequisites>
      <li>BasicWashing</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>3</constructionSkillPrerequisite>
    <statBases>
      <WorkToBuild>300</WorkToBuild>
      <MaxHitPoints>180</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>0</Cleanliness>
      <WorkTableWorkSpeedFactor>0.5</WorkTableWorkSpeedFactor>
    </statBases>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>True</useHitPoints>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <rotatable>true</rotatable>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <comps>
      <li Class="CompProperties_Breakdownable" />
    </comps>
    <placeWorkers>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
  </ThingDef>
</Defs>